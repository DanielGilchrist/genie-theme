{
  "$schema": "../schemas/colour-theme.json",

  // Custom properties that get stripped by `scripts/build.js`
  "colourVariables": {
    /*
      Usage:
        "editor.background": "{{genieBackground}}"
        "editor.foreground": "{{lightGenieBlue}}"
    */
    "genieBackground": "#0F0F2A",
    "lightGenieBlue": "#B0B0FF",
    "brightGenieBlue": "#00BFFF",
    "genieLampGold": "#FFD700",
    "orange": "#FF4500",
    "indigo": "#4B0082",
    "purple": "#e486fc",
    "darkGenieBlue": "#003366",
    "mediumGeniePurple": "#BA55D3",
    "brighterGenieBlue": "#1E90FF",
    "brightGenieRed": "#FF007F",
    "brightGeniePurple": "#8A2BE2"
  },
  // VSCode theme properties
  "name": "Genie Theme",
  "type": "dark",
  "colors": {
    "editor.background": "{{genieBackground}}",
    "editor.foreground": "{{lightGenieBlue}}",
    "editorCursor.foreground": "{{brightGenieBlue}}",
    "editor.lineHighlightBackground": "#1E1E3F",
    "editor.selectionBackground": "{{darkGenieBlue}}",
    "editor.selectionHighlightBackground": "{{darkGenieBlue}}",
    "editorIndentGuide.background1": "#1E1E3F",
    "editorIndentGuide.activeBackground1": "{{brightGenieBlue}}",
    "editorWhitespace.foreground": "{{darkGenieBlue}}",
    "activityBar.background": "{{genieBackground}}",
    "sideBar.background": "{{genieBackground}}",
    "statusBar.background": "#1E1E3F",
    "titleBar.activeBackground": "{{genieBackground}}",
    "titleBar.inactiveBackground": "{{genieBackground}}",
    "titleBar.activeForeground": "{{brightGenieBlue}}",
    "titleBar.inactiveForeground": "{{darkGenieBlue}}",
    "input.background": "#1E1E3F",
    "input.foreground": "{{lightGenieBlue}}",
    "button.background": "{{genieLampGold}}",
    "button.foreground": "#000000",
    "tab.activeBackground": "{{genieBackground}}",
    "tab.inactiveBackground": "#1E1E3F",
    "tab.activeBorder": "{{genieLampGold}}",
    "tab.hoverBackground": "{{darkGenieBlue}}",
    "tab.hoverBorder": "{{brightGenieBlue}}",
    "peekViewEditor.background": "{{genieBackground}}",
    "peekViewEditor.matchHighlightBackground": "{{darkGenieBlue}}",
    "peekViewResult.background": "{{genieBackground}}",
    "peekViewResult.matchHighlightBackground": "{{darkGenieBlue}}",
    "peekViewTitle.background": "{{genieBackground}}",
    "peekViewTitleLabel.foreground": "{{lightGenieBlue}}",
    "editorHoverWidget.background": "#1E1E3F",
    "editorHoverWidget.border": "{{brightGenieBlue}}",
    "editorHoverWidget.foreground": "{{lightGenieBlue}}",
    "editorHoverWidget.highlightForeground": "{{genieLampGold}}",
    "editorGroupHeader.tabsBackground": "{{genieBackground}}",
    "quickInput.background": "{{genieBackground}}",
    "quickInput.foreground": "{{lightGenieBlue}}",
    "quickInputList.focusBackground": "{{genieLampGold}}",
    "quickInputList.focusForeground": "{{genieBackground}}"
  },
  "tokenColors": [
    // Comments
    {
      "scope": [
        "comment",
        "comment.block.documentation",
        "comment.block.documentation keyword",
        "comment.block.documentation string"
      ],
      "settings": {
        "foreground": "{{brightGeniePurple}}",
        "fontStyle": "italic"
      }
    },
    // Keywords
    {
      "scope": [
        "keyword",
        "keyword.control",
        "keyword.operator",
        "storage.type"
      ],
      "settings": {
        "foreground": "{{brightGenieRed}}"
      }
    },
    // Constants
    {
      "scope": [
        "constant",
        "constant.language",
        "constant.numeric",
        "constant.character",
        "constant.other",
        "entity.name.constant",
        "variable.other.constant",
        "support.constant"
      ],
      "settings": {
        "foreground": "{{genieLampGold}}"
      }
    },
    // Strings
    {
      "scope": [
        "string",
        "string.quoted",
        "string.quoted.double",
        "string.quoted.single",
        "string.template",
        "string.interpolated"
      ],
      "settings": {
        "foreground": "{{brightGenieBlue}}"
      }
    },
    // Variables
    {
      "scope": [
        "variable",
        "variable.other",
        "variable.parameter",
        "variable.language"
      ],
      "settings": {
        "foreground": "{{brighterGenieBlue}}"
      }
    },
    // Functions
    {
      "scope": ["function", "entity.name.function"],
      "settings": {
        "foreground": "{{purple}}"
      }
    },
    // Types
    {
      "scope": [
        "entity.name.type",
        "support.type",
        "entity.name.class",
        "entity.name.namespace",
        "storage.type.class",
        "storage.type.struct",
        "entity.name.enum",
        "storage.type.annotation",
        "entity.other.inherited-class",
        "entity.name.type.class"
      ],
      "settings": {
        "foreground": "{{genieLampGold}}"
      }
    },
    {
      "scope": ["markup.heading", "markup.heading entity.name"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "{{orange}}"
      }
    },
    {
      "scope": ["markup.bold", "markup.italic", "markup.quote"],
      "settings": {
        "foreground": "{{lightGenieBlue}}"
      }
    },
    {
      "scope": ["markup.underline"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "{{brightGenieBlue}}"
      }
    },
    {
      "scope": ["markup.strike"],
      "settings": {
        "fontStyle": "strikethrough",
        "foreground": "{{indigo}}"
      }
    },
    {
      "scope": ["markup.quote"],
      "settings": {
        "foreground": "{{darkGenieBlue}}"
      }
    },
    {
      "scope": [
        "string.other.link.title.markdown",
        "string.other.link.description.title.markdown",
        "string.other.link.anchor.markdown"
      ],
      "settings": {
        "foreground": "{{mediumGeniePurple}}"
      }
    },
    {
      "scope": ["markup.raw.block"],
      "settings": {
        "foreground": "{{brightGenieBlue}}"
      }
    },
    {
      "scope": [
        "markup.fenced_code.block",
        "markup.fenced_code.block.markdown"
      ],
      "settings": {
        "foreground": "{{brightGenieBlue}}"
      }
    },
    {
      "scope": ["markup.fenced_code.block.markdown variable"],
      "settings": {
        "foreground": "{{orange}}"
      }
    }
  ]
}
