{
  "name": "Genie Theme",
  "type": "dark",
  "colors": {
      "editor.background": "#0F0F2A", // Dark background for Genie ambiance
      "editor.foreground": "#B0B0FF", // Light Genie blue for text
      "editorCursor.foreground": "#00BFFF", // Bright Genie blue for cursor
      "editor.lineHighlightBackground": "#1E1E3F",
      "editor.selectionBackground": "#003366", // Dark blue for selection
      "editor.selectionHighlightBackground": "#003366",
      "editorIndentGuide.background": "#1E1E3F",
      "editorIndentGuide.activeBackground": "#00BFFF",
      "editorWhitespace.foreground": "#003366",
      "activityBar.background": "#0F0F2A",
      "sideBar.background": "#0F0F2A",
      "statusBar.background": "#1E1E3F",
      "titleBar.activeBackground": "#0F0F2A",
      "titleBar.inactiveBackground": "#0F0F2A",
      "titleBar.activeForeground": "#00BFFF",
      "titleBar.inactiveForeground": "#004080",
      "input.background": "#1E1E3F",
      "input.foreground": "#B0B0FF", // Light Genie blue for input text
      "button.background": "#FFD700", // Lamp gold for buttons
      "button.foreground": "#000000", // Text color for buttons
      "tab.activeBackground": "#0F0F2A",
      "tab.inactiveBackground": "#1E1E3F",
      "tab.activeBorder": "#FFD700", // Lamp gold for active tab border
      "tab.inactiveBorder": "#003366",
      "tab.hoverBackground": "#003366",
      "tab.hoverBorder": "#00BFFF",
      "peekViewEditor.background": "#0F0F2A",
      "peekViewEditor.matchHighlightBackground": "#003366",
      "peekViewResult.background": "#0F0F2A",
      "peekViewResult.matchHighlightBackground": "#003366",
      "peekViewTitle.background": "#0F0F2A",
      "peekViewTitleLabel.foreground": "#B0B0FF",
      "editorHoverWidget.background": "#1E1E3F",
      "editorHoverWidget.border": "#00BFFF",
      "editorHoverWidget.foreground": "#B0B0FF",
      "editorHoverWidget.highlightForeground": "#FFD700",
      "commandPalette.background": "#0F0F2A",
      "commandPalette.foreground": "#B0B0FF",
      "commandPalette.border": "#00BFFF",
      "commandPalette.itemBackground": "#1E1E3F",
      "commandPalette.itemHoverBackground": "#003366",
      "commandPalette.itemSelectedBackground": "#00BFFF",
      "commandPalette.itemSelectedForeground": "#000000"
  },
  "tokenColors": [
      {
          "scope": [
              "comment",
              "comment.block.documentation",
              "comment.block.documentation keyword",
              "comment.block.documentation string"
          ],
          "settings": {
              "foreground": "#8A2BE2", // Darker purple for comments
              "fontStyle": "italic"
          }
      },
      {
          "scope": [
              "keyword",
              "keyword.control",
              "keyword.operator"
          ],
          "settings": {
              "foreground": "#FF007F" // Red for keywords
          }
      },
      {
          "scope": [
              "constant",
              "constant.language",
              "constant.numeric",
              "constant.character",
              "constant.other"
          ],
          "settings": {
              "foreground": "#FFD700" // Lamp gold for constants
          }
      },
      {
          "scope": [
              "string",
              "string.quoted",
              "string.quoted.double",
              "string.quoted.single",
              "string.template",
              "string.interpolated"
          ],
          "settings": {
              "foreground": "#00BFFF" // Genie blue for strings
          }
      },
      {
          "scope": [
              "variable",
              "variable.other",
              "variable.parameter"
          ],
          "settings": {
              "foreground": "#1E90FF" // Brighter Genie blue for variables
          }
      },
      {
          "scope": [
              "function",
              "entity.name.function"
          ],
          "settings": {
              "foreground": "#BA55D3" // Medium purple for functions
          }
      },
      {
          "scope": [
              "markup.heading",
              "markup.heading entity.name"
          ],
          "settings": {
              "fontStyle": "bold",
              "foreground": "#FF4500" // Orange for headings
          }
      },
      {
          "scope": [
              "markup.bold",
              "markup.italic",
              "markup.quote"
          ],
          "settings": {
              "foreground": "#B0B0FF" // Light Genie blue for bold, italic, and quotes
          }
      },
      {
          "scope": [
              "markup.underline"
          ],
          "settings": {
              "fontStyle": "underline",
              "foreground": "#00BFFF" // Genie blue for underlined text
          }
      },
      {
          "scope": [
              "markup.strike"
          ],
          "settings": {
              "fontStyle": "strikethrough",
              "foreground": "#4B0082" // Indigo for strikethrough text
          }
      },
      {
          "scope": [
              "markup.quote"
          ],
          "settings": {
              "foreground": "#004080" // Dark blue for quoted text
          }
      },
      {
          "scope": [
              "string.other.link.title.markdown"
          ],
          "settings": {
              "foreground": "#BA55D3" // Medium purple for markdown links
          }
      },
      {
          "scope": [
              "string.other.link.description.title.markdown"
          ],
          "settings": {
              "foreground": "#BA55D3" // Medium purple for markdown link descriptions
          }
      },
      {
          "scope": [
              "string.other.link.anchor.markdown"
          ],
          "settings": {
              "foreground": "#BA55D3" // Medium purple for markdown link anchors
          }
      },
      {
          "scope": [
              "markup.raw.block"
          ],
          "settings": {
              "foreground": "#00BFFF" // Genie blue for raw blocks
          }
      },
      {
          "scope": [
              "markup.fenced_code.block",
              "markup.fenced_code.block.markdown"
          ],
          "settings": {
              "foreground": "#00BFFF" // Genie blue for fenced code blocks
          }
      },
      {
          "scope": [
              "markup.fenced_code.block.markdown variable"
          ],
          "settings": {
              "foreground": "#FF4500" // Orange for fenced code block variables
          }
      },
      {
          "name": "Ruby - Namespaces and Constants",
          "scope": [
              "entity.name.namespace.ruby",
              "entity.name.class.ruby",
              "entity.name.type.ruby",
              "entity.name.function.ruby",
              "constant.language.ruby",
              "constant.numeric.ruby",
              "constant.other.symbol.ruby"
          ],
          "settings": {
              "foreground": "#FFD700" // Lamp gold for Ruby namespaces and constants
          }
      },
      {
          "name": "Ruby - Strings",
          "scope": [
              "string.quoted.double.ruby",
              "string.quoted.single.ruby",
              "string.quoted.other.literal.ruby",
              "string.interpolated.ruby"
          ],
          "settings": {
              "foreground": "#00BFFF" // Genie blue for Ruby strings
          }
      },
      {
          "name": "Ruby - Variables",
          "scope": [
              "variable.ruby",
              "variable.other.readwrite.ruby",
              "variable.parameter.function.ruby",
              "variable.other.constant.ruby",
              "variable.other.local.ruby",
              "variable.other.instance.ruby",
              "variable.other.global.ruby",
              "variable.other.readwrite.instance.ruby"
          ],
          "settings": {
              "foreground": "#1E90FF" // Brighter Genie blue for Ruby variables
